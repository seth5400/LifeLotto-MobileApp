<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".generate_music">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_music">

        <TextView
            android:id="@+id/thairap_result"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginStart="105dp"
            android:layout_marginTop="132dp"
            android:layout_marginEnd="106dp"
            android:fontFamily="@font/eazy_chat"
            android:gravity="center"
            android:text="xxxxxxxx"
            android:textColor="#FFFFFF"
            android:textSize="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="100dp"
            android:fontFamily="@font/eazy_chat"
            android:gravity="center"
            android:text="@string/act_act_gv"
            android:textColor="#ffffff"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/generate_bg_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/thairap_info"
                android:layout_width="350dp"
                android:layout_height="160dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="69dp"
                android:layout_marginEnd="31dp"
                android:text=""
                android:textColor="#a6a6a6"
                android:textSize="18dp"
                android:gravity="center"
                android:fontFamily="@font/eazy_chat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/genthai_rap"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/btn_music"
                android:fontFamily="@font/eazy_chat"
                android:letterSpacing="0.02"
                android:paddingTop="5dp"
                android:text="@string/act_act_btng"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="28dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageButton
            android:id="@+id/back_gen_rapt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"

            android:backgroundTint="@color/cardview_shadow_end_color"
            android:importantForAccessibility="no"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.016"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_back_white" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>